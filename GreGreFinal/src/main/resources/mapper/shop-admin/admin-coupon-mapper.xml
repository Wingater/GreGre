<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="adminCoupon">

<insert id="sendCoupon">
insert into
	tb_coupon_list
		values(
			#{couponId},
			#{memberId},
			sysdate+${expireDate},
			#{couponState}
		)
	
</insert>
<select  id="selectCoupon" resultType="AdminCoupon">
select
	*
from
	tb_coupon_info
where
	coupon_id=#{couponId}
	
</select>
<select  id="couponList" resultType="AdminCoupon">
select
	*
from
	tb_coupon_info
</select>
<insert id="insert" >
insert into 
	tb_coupon_info 
		values(
			seq_TB_coupon_id.nextval,
			#{couponType},
			#{couponName},
			#{couponDetail},
			#{discountValue},
			#{discountType},
			#{maxValue},
			#{couponDuration},
			default
		)

</insert>

</mapper>